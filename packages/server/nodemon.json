{
  "watch": [
    "package.json",
    "nodemon.json",
    ".eslintrc.json",
    ".prettierrc",
    "src/",
    "../core/dist/"
  ],
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "ignoreRoot": [".git"],
  "restartable": "rs",
  "verbose": true,
  "ext": "js,json,ts",
  "ignore": ["*.test.ts", "*.spec.ts", "*.d.ts"]
}
