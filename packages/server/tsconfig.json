{
  "compileOnSave": true,
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "jsx": "react-jsx",

    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "typeRoots": ["./@types", "node_modules/@types"],
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "gpt-3-encoder": ["@types/gpt-3-encoder.d.ts"],
      "ot-json0": ["@types/ot-json0.d.ts"],
      "@thothai/thoth-core": ["@types/thoth-core.d.ts"],
      "@thothai/thoth-core/dist/server": [
        "@thothai/thoth-core/dist/server.d.ts"
      ]
    },
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "hocs/**/*.ts",
    "jobs/**/*.ts",
    "src/**/*.ts",
    "@types/**/*.d.ts",
    "__tests__/**/*.ts",
    "index.ts"
  ]
}
